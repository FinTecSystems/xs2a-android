<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="XS2ATheme">
        <item name="xs2a_tintColor">@color/primary_color</item>
        <item name="xs2a_textColor">@color/text_color</item>
        <item name="xs2a_placeholderColor">@color/text_color_placeholder</item>
        <item name="xs2a_backgroundColor">@color/background_none</item>

        <item name="xs2a_buttonShapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="xs2a_textInputShapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>

        <item name="xs2a_textInput_backgroundColor">@color/mtrl_filled_background_color</item>

        <item name="xs2a_loadingIndicatorBackgroundColor">@color/background_translucent</item>
        <item name="xs2a_loadingIndicatorColor">?attr/xs2a_tintColor</item>

        <item name="xs2a_paragraph_cornerRadius">0dp</item>
        <item name="xs2a_paragraph_cornerRadiusBottomLeft">?xs2a_paragraph_cornerRadius</item>
        <item name="xs2a_paragraph_cornerRadiusBottomRight">?xs2a_paragraph_cornerRadius</item>
        <item name="xs2a_paragraph_cornerRadiusTopLeft">?xs2a_paragraph_cornerRadius</item>
        <item name="xs2a_paragraph_cornerRadiusTopRight">?xs2a_paragraph_cornerRadius</item>

        <item name="xs2a_paragraph_containerMarginHorizontal">0dp</item>
        <item name="xs2a_paragraph_containerPadding">10dp</item>
        <item name="xs2a_paragraph_containerPaddingVertical">?xs2a_paragraph_containerPadding</item>
        <item name="xs2a_paragraph_containerPaddingHorizontal">?xs2a_paragraph_containerPadding</item>

        <item name="xs2a_paragraph_error_background_color">@color/background_error</item>
        <item name="xs2a_paragraph_error_text_color">@color/text_color_light</item>
        <item name="xs2a_paragraph_info_background_color">@color/background_info</item>
        <item name="xs2a_paragraph_info_text_color">@color/text_color_light</item>
        <item name="xs2a_paragraph_warning_background_color">@color/background_warning</item>
        <item name="xs2a_paragraph_warning_text_color">@color/text_color</item>
        <item name="xs2a_paragraph_background_color">@color/background_none</item>
        <item name="xs2a_paragraph_text_color">@color/text_color</item>

        <item name="xs2a_button_submit_background_color">@color/primary_color</item>
        <item name="xs2a_button_submit_text_color">@color/text_color_light</item>
        <item name="xs2a_button_abort_background_color">@color/text_color_placeholder</item>
        <item name="xs2a_button_abort_text_color">@color/text_color_light</item>
        <item name="xs2a_button_back_background_color">@color/text_color_placeholder</item>
        <item name="xs2a_button_back_text_color">@color/text_color_light</item>
        <item name="xs2a_button_restart_background_color">@color/text_color_placeholder</item>
        <item name="xs2a_button_restart_text_color">@color/text_color_light</item>
        <item name="xs2a_button_redirect_background_color">@color/primary_color</item>
        <item name="xs2a_button_redirect_text_color">@color/text_color_light</item>

        <item name="xs2a_webViewIconColor">?xs2a_textColor</item>
    </style>
    <style name="XS2ATheme.Base" parent="XS2ATheme">
        <item name="colorAccent">?attr/xs2a_tintColor</item>
        <item name="colorPrimary">?attr/xs2a_tintColor</item>

        <item name="fontFamily">?attr/xs2a_fontFamily</item>
        <item name="android:fontFamily">?attr/xs2a_fontFamily</item>
    </style>
    <style name="XS2ATheme.TabsText" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">?attr/xs2a_fontFamily</item>
    </style>
    <style name="XS2ATheme.Container" parent="XS2ATheme.Base">
        <item name="android:background">?attr/xs2a_backgroundColor</item>
    </style>
    <style name="XS2ATheme.TextInput">
        <item name="colorAccent">?attr/xs2a_tintColor</item>
        <item name="colorPrimary">?attr/xs2a_tintColor</item>
        <item name="boxBackgroundColor">?attr/xs2a_textInput_backgroundColor</item>
        <item name="android:textColorHint">?attr/xs2a_placeholderColor</item>
        <item name="android:textColor">?attr/xs2a_textColor</item>
        <item name="shapeAppearance">?attr/xs2a_textInputShapeAppearance</item>
    </style>
    <style name="XS2ATheme.Radio">
        <item name="colorAccent">?attr/xs2a_tintColor</item>
        <item name="colorPrimary">?attr/xs2a_tintColor</item>
        <item name="android:textColor">?attr/xs2a_textColor</item>
    </style>
    <style name="XS2ATheme.TextView">
        <item name="android:textColorLink">?attr/xs2a_tintColor</item>
        <item name="android:textColor">?attr/xs2a_textColor</item>
    </style>
    <style name="XS2ATheme.PopupTextView" parent="XS2ATheme.TextView">
        <item name="android:background">?attr/xs2a_backgroundColor</item>
    </style>
    <style name="XS2ATheme.Checkbox" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorAccent">?attr/xs2a_tintColor</item>
        <item name="android:textColor">?attr/xs2a_textColor</item>
    </style>
    <style name="XS2ATheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">?attr/xs2a_buttonShapeAppearance</item>
    </style>
    <style name="XS2ATheme.SubmitButton" parent="XS2ATheme.Button">
        <item name="backgroundTint">?attr/xs2a_button_submit_background_color</item>
        <item name="android:textColor">?attr/xs2a_button_submit_text_color</item>
    </style>
    <style name="XS2ATheme.AbortButton" parent="XS2ATheme.Button">
        <item name="backgroundTint">?attr/xs2a_button_abort_background_color</item>
        <item name="android:textColor">?attr/xs2a_button_abort_text_color</item>
    </style>
    <style name="XS2ATheme.RedirectButton" parent="XS2ATheme.Button">
        <item name="backgroundTint">?attr/xs2a_button_redirect_background_color</item>
        <item name="android:textColor">?attr/xs2a_button_redirect_text_color</item>
    </style>
    <style name="XS2ATheme.RestartButton" parent="XS2ATheme.Button">
        <item name="backgroundTint">?attr/xs2a_button_restart_background_color</item>
        <item name="android:textColor">?attr/xs2a_button_restart_text_color</item>
    </style>
    <style name="XS2ATheme.BackButton" parent="XS2ATheme.Button">
        <item name="backgroundTint">?attr/xs2a_button_back_background_color</item>
        <item name="android:textColor">?attr/xs2a_button_back_text_color</item>
    </style>
    <style name="XS2ATheme.LoadingIndicator">
        <item name="android:background">?attr/xs2a_loadingIndicatorBackgroundColor</item>
        <item name="colorPrimary">?attr/xs2a_loadingIndicatorColor</item>
        <item name="colorAccent">?attr/xs2a_loadingIndicatorColor</item>
    </style>
</resources>
